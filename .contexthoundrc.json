{
  "include": [
    "**/*.prompt",
    "**/*.prompt.*",
    "**/*.md",
    "**/*.txt",
    "**/*.yaml",
    "**/*.yml",
    "**/*.json",
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.git/**",
    "**/coverage/**",
    "**/*.min.js",
    "**/*.lock",
    "**/package-lock.json",
    "**/attacks/**",
    "**/src/rules/**",
    "**/src/scanner/**",
    "**/tests/**",
    "**/test/**",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "README.md",
    "CHANGELOG.md",
    "SECURITY.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "ContextHound.md",
    "CLAUDE.md",
    "AGENTS.md",
    "GEMINI.md"
  ],
  "threshold": 60,
  "formats": ["console"],
  "verbose": false
}
