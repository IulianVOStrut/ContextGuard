{
  "name": "context-guard",
  "version": "1.0.0",
  "description": "Developer-first prompt-injection tester for CI and local use",
  "main": "dist/cli.js",
  "bin": {
    "prompt-audit": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prompt-audit": "node dist/cli.js scan",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["prompt-injection", "security", "llm", "ai-safety", "cli"],
  "author": "IulianVOStrut",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.3",
    "fast-glob": "^3.3.2",
    "ts-morph": "^21.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
